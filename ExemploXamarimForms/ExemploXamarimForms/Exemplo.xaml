<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExemploXamarimForms.Exemplo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!" x:Name="lblResult"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="tbxTeste"  
                   Placeholder="Informe um valor" Keyboard="Numeric"
                   />
            <Button x:Name="btnEnviar" Text="Enviar" Clicked="BtnEnviar_OnClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>